<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- PinEntryEditText is not focused -->
    <item android:state_focused="true" android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke android:color="@color/color_stroke"
                android:width="1dp"/>
            <solid android:color="@color/background_for_edittext"/>
        </shape>
    </item>
    <!--Space is the next space for character input -->
    <item android:state_focused="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke android:color="@color/main_orange"
                android:width="1dp"/>
            <solid android:color="@color/background_for_edittext"/>
        </shape>
    </item>
    <!-- PinEntryEditText is focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke android:color="@color/color_stroke"
                android:width="1dp"/>
            <solid android:color="@color/background_for_edittext"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke android:color="@color/color_stroke"
                android:width="1dp"/>
            <solid android:color="@color/background_for_edittext"/>
        </shape>
    </item>
</selector>