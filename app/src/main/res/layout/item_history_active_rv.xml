<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="24dp"
    android:background="@color/back_color"
    android:orientation="horizontal"
    android:paddingVertical="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/hist_active_mat_card"
        android:layout_width="34dp"
        android:layout_height="34dp"
        app:cardBackgroundColor="@color/background_black"
        app:cardCornerRadius="9dp">

        <ImageView
            android:id="@+id/hist_active_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_lp_text_icon" />
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_hist_active_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noah_medium"
            android:textColor="@color/white"
            android:layout_marginStart="12dp"
            tools:text="Samsung S22 Ultra, Приложение Let’s Play"/>
        <TextView
            android:id="@+id/desc_hist_active_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noah_regular"
            android:textSize="12sp"
            android:textColor="@color/main_gray"
            android:layout_marginStart="12dp"
            tools:text="сегодня в 11:22, Россия"/>

    </LinearLayout>
</LinearLayout>