                    app:layout_constraintEnd_toEndOf="@+id/view_gray_3"
                    app:layout_constraintStart_toStartOf="@+id/view_gray_3"
                    app:layout_constraintTop_toBottomOf="@+id/view_gray_3">

                    <ImageView
