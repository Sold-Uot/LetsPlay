                    app:layout_constraintStart_toStartOf="@+id/balls_tv"
                    app:layout_constraintTop_toBottomOf="@+id/balls_tv" />

                <TextView
                    android:id="@+id/payment_card_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
